
<h1 class="text-2xl font-bold mb-6 text-gray-100">Détail de l'événement</h1>
<div class="relative rounded shadow overflow-hidden mb-6 h-64 md:h-96 flex items-center justify-center">
  <% if @event.image.attached? %>
    <img src="<%= url_for(@event.image) %>" class="absolute inset-0 w-full h-full object-cover" alt="image événement">
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  <% else %>
    <div class="absolute inset-0 w-full h-full bg-gray-300 flex items-center justify-center">
      <span class="text-gray-500">Aucune image</span>
    </div>
  <% end %>
</div>
<div class="bg-white bg-opacity-90 rounded shadow p-6">
  <p class="text-lg font-semibold text-gray-900 mb-2"><%= @event.title %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Date :</strong> <%= @event.date&.strftime('%d/%m/%Y') %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Début :</strong> <%= @event.start_time&.strftime('%H:%M') %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Fin :</strong> <%= @event.end_time&.strftime('%H:%M') %></p>
  <p class="text-sm text-gray-700 mb-2"><strong>Description :</strong> <%= @event.description %></p>
</div>
<%= link_to 'Retour à la liste', admin_events_path, class: 'mt-4 inline-block text-indigo-600 hover:underline' %> 
