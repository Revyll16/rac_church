<h1 class="text-2xl font-bold mb-6 text-gray-100">Détail du groupe</h1>
<div class="relative rounded shadow overflow-hidden mb-6 h-64 md:h-96 flex items-center justify-center">
  <% if @group.image.attached? %>
    <img src="<%= url_for(@group.image) %>" class="absolute inset-0 w-full h-full object-cover" alt="image groupe">
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  <% else %>
    <div class="absolute inset-0 w-full h-full bg-gray-300 flex items-center justify-center">
      <span class="text-gray-500">Aucune image</span>
    </div>
  <% end %>
</div>
<div class="bg-white bg-opacity-90 rounded shadow p-6">
  <p class="text-lg font-semibold text-gray-900 mb-2"><%= @group.name %></p>
  <p class="text-sm text-gray-700 mb-2"><strong>Description :</strong> <%= @group.description %></p>
  <p class="text-sm text-gray-700 mb-2"><strong>Membres :</strong></p>
  <ul class="list-disc pl-5">
    <% @group.members.each do |member| %>
      <li class="text-gray-800"><%= member.full_name %> (<%= member.email %>)</li>
    <% end %>
  </ul>
</div>
<%= link_to 'Retour à la liste', admin_groups_path, class: 'mt-4 inline-block text-indigo-600 hover:underline' %> 