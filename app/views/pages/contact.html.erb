<div class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Contactez-nous</h1>
      <p class="text-lg text-gray-300">Nous sommes là pour vous écouter et répondre à vos questions</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Formulaire de contact -->
      <div class="bg-gray-800 p-8 rounded-lg">
        <h2 class="text-2xl font-semibold text-white mb-6">Envoyez-nous un message</h2>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300">Nom</label>
            <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white" required>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
            <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white" required>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-300">Sujet</label>
            <input type="text" id="subject" name="subject" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white" required>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-300">Message</label>
            <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white" required></textarea>
          </div>

          <button type="submit" class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition-colors">
            Envoyer le message
          </button>
        </form>
      </div>

      <!-- Informations de contact -->
      <div class="space-y-8">
        <div class="bg-gray-800 p-8 rounded-lg">
          <h2 class="text-2xl font-semibold text-white mb-6">Informations de contact</h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-indigo-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <h3 class="text-lg font-medium text-white">Adresse</h3>
                <p class="text-gray-300">123 Rue de l'Église</p>
                <p class="text-gray-300">75000 Ville</p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-6 h-6 text-indigo-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <div>
                <h3 class="text-lg font-medium text-white">Email</h3>
                <p class="text-gray-300">contact@racchurch.com</p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-6 h-6 text-indigo-400 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <div>
                <h3 class="text-lg font-medium text-white">Téléphone</h3>
                <p class="text-gray-300">+33 1 23 45 67 89</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Horaires d'ouverture -->
        <div class="bg-gray-800 p-8 rounded-lg">
          <h2 class="text-2xl font-semibold text-white mb-6">Horaires d'ouverture</h2>
          <div class="space-y-4">
            <div class="flex justify-between">
              <span class="text-gray-300">Lundi - Vendredi</span>
              <span class="text-gray-300">9:00 - 17:00</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-300">Samedi</span>
              <span class="text-gray-300">10:00 - 15:00</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-300">Dimanche</span>
              <span class="text-gray-300">Fermé (sauf culte)</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 