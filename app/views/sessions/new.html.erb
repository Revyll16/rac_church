<div class="min-h-screen bg-gradient-to-br from-[#0f172a] via-[#1e293b] to-[#0f172a] flex items-center justify-center px-4 py-12 text-white">
  <div class="w-full max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">

    <!-- Image/logo en premier sur mobile, à droite sur grand écran -->
    <div class="order-1 lg:order-2 flex flex-col items-center justify-center w-full px-6 sm:px-0 text-center">
      <%= image_tag "Earth2 RAC.png", class: "h-44 w-auto drop-shadow-xl transition-transform duration-500 hover:scale-105", alt: "R.A.C Church Logo" %>
    </div>

    <!-- Formulaire : à gauche sur desktop -->
    <div class="order-2 lg:order-1 w-full px-6 sm:px-0">
      <div class="bg-slate-800 shadow-2xl rounded-2xl px-8 py-10">
        <h2 class="text-3xl font-bold text-white text-center lg:text-left">Bienvenue à R.A.C Church</h2>
        <p class="mt-2 text-base text-gray-300 text-center lg:text-left">Connecte-toi à ton espace spirituel</p>

        <%= form_with(scope: :session, url: login_path, local: true, class: "space-y-6 mt-8") do |f| %>
          <div>
            <%= f.label :email, "Adresse email", class: "block text-sm font-medium text-gray-300" %>
            <div class="mt-1">
              <%= f.email_field :email, required: true, class: "w-full rounded-md border border-gray-600 bg-transparent px-4 py-2 text-sm text-white placeholder-gray-400 focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500" %>
            </div>
          </div>

          <div>
            <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-300" %>
            <div class="mt-1">
              <%= f.password_field :password, required: true, class: "w-full rounded-md border border-gray-600 bg-transparent px-4 py-2 text-sm text-white placeholder-gray-400 focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500" %>
            </div>
          </div>

          <div class="mt-6 flex justify-center lg:justify-start">
            <%= f.button "Se connecter", class: "
              inline-flex items-center justify-center
              px-6 py-2.5
              rounded-lg bg-indigo-600 text-sm font-semibold text-white shadow-md 
              hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 
              focus:ring-offset-2 transition-all duration-200 cursor-pointer hover:scale-105
            " %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="mt-6 rounded-md bg-red-600/10 p-4 border border-red-500 text-sm text-red-300 flex items-center space-x-2">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.7 7.3a1 1 0 00-1.4 1.4L8.6 10l-1.3 1.3a1 1 0 101.4 1.4L10 11.4l1.3 1.3a1 1 0 001.4-1.4L11.4 10l1.3-1.3a1 1 0 00-1.4-1.4L10 8.6 8.7 7.3z" clip-rule="evenodd" />
            </svg>
            <p><%= flash[:alert] %></p>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
